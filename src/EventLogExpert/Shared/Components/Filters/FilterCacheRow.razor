@using EventLogExpert.UI
@using EventLogExpert.UI.Models

<div class="flex-space-between">
    @if (_isEditing)
    {
        <div class="flex-align-center">
            <span>Cache Type: </span>
            <ValueSelect CssClass="input filter-dropdown" T="CacheType" @bind-Value="_cacheType" ToStringFunc="x => x.ToFullString()">
                @foreach (CacheType item in Enum.GetValues(typeof(CacheType)))
                {
                    <ValueSelectItem T="CacheType" Value="item">@item.ToFullString()</ValueSelectItem>
                }
            </ValueSelect>

            <span>Value: </span>
            @if (_cacheType == CacheType.Favorites)
            {
                <ValueSelect CssClass="input cache-dropdown" T="FilterCacheModel" @bind-Value="Value" ToStringFunc="@(x => x?.ComparisonString ?? "Invalid Filter")">
                    @if (FilterCacheState.Value.FavoriteFilters.Any())
                    {
                        @foreach (var item in FilterCacheState.Value.FavoriteFilters)
                        {
                            <ValueSelectItem T="FilterCacheModel" Value="item">@item.ComparisonString</ValueSelectItem>
                        }
                    }
                    else
                    {
                        <ValueSelectItem T="FilterCacheModel" IsDisabled>None</ValueSelectItem>
                    }
                </ValueSelect>
            }
            else
            {
                <ValueSelect CssClass="input cache-dropdown" T="FilterCacheModel" @bind-Value="Value" ToStringFunc="@(x => x?.ComparisonString ?? "Invalid Filter")">
                    @if (FilterCacheState.Value.RecentFilters.Any())
                    {
                        @foreach (var item in FilterCacheState.Value.RecentFilters)
                        {
                            <ValueSelectItem T="FilterCacheModel" Value="item">@item.ComparisonString</ValueSelectItem>
                        }
                    }
                    else
                    {
                        <ValueSelectItem T="FilterCacheModel" IsDisabled>None</ValueSelectItem>
                    }
                </ValueSelect>
            }
        </div>
    }
    else
    {
        <span>@Value.ComparisonString</span>
    }

    <div class="justify-self-right">
        @if (_isEditing)
        {
            <button class="button button-green" @onclick="SaveFilter">
                <i class="bi bi-check-circle"></i> Save
            </button>

            <button class="button button-red fixed-width" @onclick="RemoveFilter">
                <i class="bi bi-dash-circle"></i> Remove
            </button>
        }
        else
        {
            <button class="button" @onclick="EditFilter">
                <i class="bi bi-funnel"></i> Edit
            </button>

            @if (Value.IsEnabled)
            {
                <button class="button button-red fixed-width" @onclick="ToggleFilter">
                    <i class="bi bi-dash-circle"></i> Disable
                </button>
            }
            else
            {
                <button class="button button-green fixed-width" @onclick="ToggleFilter">
                    <i class="bi bi-plus-circle"></i> Enable
                </button>
            }
        }
    </div>
</div>
