@typeparam TInput
@using EventLogExpert.UI
@inherits EventLogExpert.Shared.Base.SelectComponent<TInput>

<div class="input-select">
    <label>
        <input type="text" class="input filter-dropdown" value="@Value.ToFullString()" readonly
            @onfocusin="() => SetDropDownVisibility(true)" @onfocusout="() => SetDropDownVisibility(false)" />
    </label>

    <div class="dropdown-list" data-toggle="@IsDropDownVisible">
        @if (typeof(FilterType).IsAssignableFrom(typeof(TInput)))
        {
            @foreach (TInput item in Enum.GetValues(typeof(FilterType)))
            {
                <div @onmousedown="() => UpdateValue(item)">@item.ToFullString()</div>
            }
        }

        @if (typeof(FilterComparison).IsAssignableFrom(typeof(TInput)))
        {
            @foreach (TInput item in Enum.GetValues(typeof(FilterComparison)))
            {
                <div @onmousedown="() => UpdateValue(item)">@item.ToFullString()</div>
            }
        }
    </div>
</div>
