<div class="flex-center-aligned-row px-4">
    <div class="d-flex">
        <span>Join On: </span>
        <FilterSelect @bind-Value="Value.FilterType" TInput="UI.FilterType" />

        <span>Comparison: </span>
        <FilterSelect @bind-Value="Value.FilterComparison" TInput="UI.FilterComparison" />

        <span>Value: </span>
        @if (Value.FilterType is UI.FilterType.Description)
        {
            <FilterInput @bind-Value="@Value.FilterValue" />
        }
        else
        {
            <FilterValueSelect @bind-Value="@Value.FilterValue" Type="Value.FilterType" />
        }

    </div>

    <button class="button button-red" @onclick="RemoveSubFilter">
        <i class="bi bi-dash-circle"></i> Remove
    </button>
</div>
